# RFID System Configuration

# Database Configuration - MySQL
DATABASE_URL=mysql+mysqlconnector://root:@localhost:3306/rfid_system

# หรือใช้ individual settings
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=rfid_system
MYSQL_CHARSET=utf8mb4

DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# WebSocket Configuration
WS_PORT=8000
WS_HOST=0.0.0.0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# RFID Scanner Configuration
SCANNER_PORT=COM3
SCANNER_BAUDRATE=115200
SCANNER_TIMEOUT=5
SCANNER_AUTO_RECONNECT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760